<div class='show-container'>
    <div class='show-recipe'>
        <% if @recipe.user %>
            <h3>Recipe <%= @recipe.id %></h3>
        <div class='recipe-details'>
            <div class='info'>
                <p>Preparation time: <%= @recipe.preparation_time %><p>
                <p>Cooking time: <%= @recipe.cooking_time %><p>
                <p><%= @recipe.description.truncate(20) %></p>
            </div>
            <p>Public: <%= @recipe.public %></p>
        </div>

        <div class='show-btns'>
            <button type='button'>Generate shopping list</button>
            <button><%= link_to "Add Food", new_user_food_path %></button>
        </div>
        <hr class='bottom-divider'>
        <div class='food-container'>
            <h1>The form goes here</h1>
        </div>

        <% else %>
            <p>This recipe is not available for public views</p>
        <%end%>
    </div>


</div>