<div class='show-container'>
    <div class='show-recipe'>
        <% if @recipe.user %>
            <h3 class='show-header'>Recipe <%= @recipe.id %></h3>
        <div class='recipe-details'>
            <div class='info'>
                <p>Preparation time: <%= @recipe.preparation_time %><p>
                <p>Cooking time: <%= @recipe.cooking_time %><p>
                <p><%= @recipe.description %></p>
            </div>
            <div class="form-check form-switch">
                <label class="form-check-label" for="flexSwitchCheckChecked">Public</label>
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked= <%= @recipe.public %> />
            </div>
        </div>

        <div class='show-btns'>
            <button type='button'>Generate shopping list</button>
            <button><%= link_to "Add Food", new_user_food_path %></button>
        </div>
        <hr class='bottom-divider'>
        <% else %>
            <p>This recipe is not available for public views</p>
        <%end%>
    </div>


</div>