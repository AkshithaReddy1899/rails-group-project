<div class="text-end m-4">
    <%= link_to "Add recipe", new_recipe_path, method: :get, class: "btn btn-secondary"  %>
</div>

<div class='recipes-container'>
    <% if @recipes.empty? %>
        <%= render 'no_recipe'%>
    <% else %>
        <% @recipes.each_with_index do |recipe, index| %>
        <div class='recipes'>
         <%= render 'recipe', recipe: recipe, index: index %>
        </div>
        <% end %>
    <% end %>
</div>