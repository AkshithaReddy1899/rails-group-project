<table class="styled-table">
    <thead>
        <tr>
           <th>Food</th>
           <th>Quantity</th>
           <th>Price</th>
        </tr>
    </thead>
    <tbody>
       <% @recipe_foods.each do |f| %>
        <tr class="active-row">
            <td><%= f.food.name%></td>
            <td><%= f.quantity %> <%= f.food.measurement_unit %></td>
            <td> $<%= f.food.price * f.quantity %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
