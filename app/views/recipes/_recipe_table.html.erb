<table class="table">
    <thead>
        <tr>
           <th>Food</th>
           <th>Quantity</th>
           <th>Value</th>
           <th>Actions</th>
        </tr>
    </thead>
    <tbody>
       <% @recipe_foods.each do |f| %>
        <tr class="active-row">
            <td><%= f.food.name%></td>
            <td><%= f.quantity %> <%= f.food.measurement_unit %></td>
            <td> $<%= f.food.price * f.quantity %></td>
            <% if can? :destroy, f %>
              <td><%= button_to "Modify", edit_recipe_food_path(f.id), method: :get %></td>
              <td><%= button_to "Delete", recipe_food_path(f.id), method: :delete %></td>
            <% else %>
              <td>----</td>
            <%end%>
        </tr>
        <% end %>
    </tbody>
  </table>
