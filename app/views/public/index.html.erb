<section class="public">
<h2 class="text-center m-5 text-secondary">Public Recipes</h2>
<div>
 <% @recipes.each do |recipe| %>
   <div class= "d-flex justify-content-between align-items-center border m-4 p-3">
      <div class="text-start mx-6">
        <h2><%= link_to recipe.name, recipe_path(recipe) %>
</h2>by&nbsp; <b><%= recipe.user[:name] %></b>
      </div>
      <div class="mx-6">
        <h3>Total food Items: <%=Recipe.items(recipe.id)%></h3>
        <h3>Total Price: $<%=Recipe.total(recipe.id)%></h3>
      </div>
  </div>
  <% end %>
  </div>
</div>
</section>
