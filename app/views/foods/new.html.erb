<%= form_with :model => @food, url: foods_path(current_user.id), method: :post do |f| %>
  <%= f.label :name, class: "form-label"%>
	<%= f.text_field :name, placeholder: "Eg: Apple", class: "form-control" %>

	<%= f.label :measurement_unit, class: "form-label"%>
	<%= f.text_field :measurement_unit, placeholder: "Eg: grams, units", class: "form-control" %>

	<%= f.label :price, class: "form-label"%>
	<%= f.text_field :price, placeholder: "Eg: Apple", class: "form-control" %>

	<%= f.submit "Add", class: "btn btn-secondary" %>
<%end%>