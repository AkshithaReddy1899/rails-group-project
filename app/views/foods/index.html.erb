<div class="container-fluid">
  <% if can? :create, @foods.new %>
		<div class="add text-end m-4">
			<%= link_to "Add food", new_food_path, method: :get, class: "btn btn-secondary"  %>
		</div>
	<%end%>
</div>

<div class="foods-table">
  <% if @foods.blank? %>
    <p>No foods present!</p>
  <%else%>
    <%= render :partial => "food_table" %>
  <%end%>
</div>